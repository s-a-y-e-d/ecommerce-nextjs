generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String @id @default(cuid())
  image       String
  name        String
  ratingStars Float
  ratingCount Int
  priceCents  Int
  keywords    Json?
  Cart        Cart[]
}

model Cart {
  id               String         @id @default(cuid())
  productId        String         @unique
  quantity         Int
  product          Product        @relation(fields: [productId], references: [id])
  deliveryoptionId Int            @default(1)
  deliveryOption   DeliveryOption @relation(fields: [deliveryoptionId], references: [id])
  order            Order[]
}

model DeliveryOption {
  id           Int    @id
  deliveryDays Int    @unique
  priceCents   Int    @unique
  cart         Cart[]
}

model PaymentSummery {
  id              String @id @default(cuid())
  itemsTotalPrice Int    @default(0)
  shippingPrice   Int    @default(0)
  totalBeforeTax  Int    @default(0)
  tax             Int    @default(0)
  total           Int    @default(0)
}

model Order {
  id     String @id @default(cuid())
  cartId String
  cart   Cart   @relation(fields: [cartId], references: [id])
}
